<article class="container">
<h2>Update Information</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-sm-3">
      <% if resource.avatar.attached? %> 
        <%= image_tag resource.avatar.variant(resize: "150x150!"), class: "rounded-circle"%>
      <%else%>
        <%= image_tag "default_user.png", height: 150, width: 150, class: "rounded-circle" %>
      <%end%> 
      <%= f.file_field :avatar %>
      </div>
    </div>
    
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Full Name</label>
      <div class="col-sm-3">
        <%= f.text_field :full_name, autofocus: true, class:"form-control form-control-sm", id:"colFormLabelSm" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Email</label>
      <div class="col-sm-3">
        <%= f.text_field :email, autofocus: true, autocomplete:"email",disabled:"true", class:"form-control form-control-sm", id:"colFormLabelSm" %>
      </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Password<br><i>(leave blank if you do not want to change it)</i></label>
      <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-sm", id:"colFormLabelSm" %>
      <% if @minimum_password_length %>
        
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Password Confirmation</label>
      <div class="col-sm-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, class:"form-control form-control-sm", id:"colFormLabelSm" %>
      </div>
    </div>
    <div class="form-group row">
      <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Current Password<br><i>(we need your current password to confirm your changes)</i></label>
      <div class="col-sm-3">
        <%= f.password_field :current_password, autocomplete: "current-password", autofocus: true, class:"form-control form-control-sm", id:"colFormLabelSm" %>
      </div>
    </div>      

    
    <div class="actions form-group row">
        
      <%= f.submit "Update Account" %>
      <% end %>
 
    </div>
   

</article>
